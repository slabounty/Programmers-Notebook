= form_for(@note) do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.text_field :description, placeholder: "Description of note..."
    = f.text_area :code, placeholder: "The code for the note..."
    = f.check_box :nonpublic
    = f.label :nonpublic, "Private", :style => "display:inline"
  = f.submit "Post", class: "btn btn-large btn-primary"

