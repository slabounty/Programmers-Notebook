- provide(:title, @user.name)
.row
  %aside{class: "span4"}
    %section
      %h1
        = gravatar_for @user
        = @user.name
    %section
      = render 'shared/stats'

  .span8
    = render 'follow_form' if signed_in?
    - if @user.notes.any?
      %h3 "Notes (#{@user.notes.count})"
      %ol{class: "notes"}
        = render @notes
      = will_paginate @notes
