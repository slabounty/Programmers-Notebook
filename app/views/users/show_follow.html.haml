- provide(:title, @title)
.row
  %aside{class: "span4"}
    %section
      = gravatar_for @user
      %h1 @user.name
      %span
        = link_to "view my profile", @user
      %span
        %b Notes: 
        = @user.notes.count
    %section
      = render 'shared/stats'
      - if @users.any?
        .user_avatars
          - @users.each do |user|
            = link_to gravatar_for(user, size: 30), user
  .span8
    %h3
      = @title
    - if @users.any?
      %ul{class: "users"}
        = render @users
      = will_paginate
